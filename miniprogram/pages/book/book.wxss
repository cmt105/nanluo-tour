/* 全局容器 */
.book-container {
  background-color: #fff;
  min-height: 100vh;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

/* 模块标题 */
.module-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin: 20rpx 0 16rpx;
  display: block;
}

/* 日期选择模块（不变） */
.date-picker {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 16rpx;
}
.week-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.week-item {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 22rpx;
  color: #666;
}
.date-row {
  display: flex;
  justify-content: space-between;
  gap: 8rpx;
}
.date-item {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 22rpx;
  color: #333;
  border-radius: 4rpx;
  position: relative;
  cursor: pointer;
}
.date-item.active {
  background-color: #8B0000;
  color: #fff;
}
.date-item.today {
  border: 2rpx solid #8B0000;
}
.today-tag {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 16rpx;
  color: #8B0000;
  background-color: #fff;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  line-height: 1;
}

/* 时间段选择模块（不变） */
.time-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 8rpx 0;
}
.time-item {
  padding: 12rpx 24rpx;
  background-color: #fff;
  border: 2rpx solid #8B0000;
  color: #8B0000;
  border-radius: 8rpx;
  font-size: 24rpx;
  cursor: pointer;
}
.time-item.active {
  background-color: #8B0000;
  color: #fff;
  border-color: #8B0000;
}
/* 无可用时间段提示 */
.no-time-tip {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
  text-align: center;
}

/* 联系人信息模块（不变） */
.contact-module {
  margin-top: 20rpx;
}
.input-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.label {
  width: 120rpx;
  font-size: 24rpx;
  color: #333;
}
.input {
  flex: 1;
  height: 64rpx;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}
.input:focus {
  border-color: #8B0000;
  outline: none;
}
.get-btn {
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #8B0000;
  cursor: pointer;
}

/* 立即预订按钮（不变） */
.book-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #8B0000;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 8rpx;
  margin-top: 40rpx;
  border: none;
  box-sizing: border-box;
}
.book-btn::after {
  border: none;
}
.book-btn[disabled] {
  background-color: #ccc;
  color: #fff;
  cursor: not-allowed;
}