/* 页面背景 */
page {
  background-color: #f9f9f9;
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx; /* 给底部标语预留空间 */
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #fff;
}
.search-icon-wrap {
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}
.search-icon {
  font-size: 24rpx;
  color: #8B0000;
}
.search-input {
  flex: 1;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}
.search-placeholder {
  color: #ccc;
}
.clear-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}
.clear-icon text {
  font-size: 20rpx;
  color: #999;
}

/* 分类标签栏 */
.tab-bar {
  display: flex;
  padding: 15rpx 20rpx;
  background-color: #fff;
  overflow-x: auto;
  gap: 30rpx;
  position: sticky;
  top: 0;
  z-index: 99;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}
.tab-bar::-webkit-scrollbar {
  display: none;
}
.tab-item {
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  white-space: nowrap;
}
.tab-item.active {
  color: #8B0000; 
  font-weight: bold;
}
.tab-underline {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0rpx;
  height: 4rpx;
  background: #8B0000;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}
.tab-underline.active {
  width: 40rpx;
}

/* 美食卡片列表 */
.food-card-list {
  padding: 15rpx 20rpx;
  gap: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

/* 空数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}
.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.empty-subtext {
  font-size: 24rpx;
  color: #999;
}

/* 美食卡片 */
.food-card {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}
.food-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 美食图片容器 */
.food-img-wrap {
  position: relative;
}
.food-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  object-fit: cover;
}
.food-tag-corner {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background-color: #8B0000;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 美食信息区域 */
.food-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.food-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.score-wrap {
  display: flex;
  align-items: center;
}
.food-score {
  font-size: 26rpx;
  color: #ffc107;
  margin-right: 8rpx;
}
.score-tag {
  font-size: 20rpx;
  color: #fff;
  background-color: #ffc107;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.food-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
  margin: 10rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 地址区域 */
.info-middle {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.addr-icon {
  font-size: 22rpx;
  color: #999;
  margin-right: 8rpx;
}
.food-addr {
  font-size: 22rpx;
  color: #999;
}
.food-distance {
  font-size: 22rpx;
  color: #999;
}

/* 价格纯右对齐 */
.info-bottom {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.food-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #8B0000;
}

/* ========== 重新设计的底部标语 ========== */
.footer-tips {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 25rpx 0;
  text-align: center;
  box-shadow: 0 -2rpx 15rpx rgba(0, 0, 0, 0.06);
  z-index: 99;
  border-top: 1rpx solid #f0f0f0;
}
.tips-content {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(90deg, #fff0f0 0%, #ffe8e8 100%);
  padding: 12rpx 40rpx;
  border-radius: 50rpx;
}
.tips-emoji {
  font-size: 36rpx;
  margin-right: 15rpx;
  display: inline-block;
}
.tips-text {
  font-size: 34rpx; /* 优化字体大小 */
  color: #8B0000;   /* 统一红色系 */
  font-weight: 500; /* 适中的字重，不厚重 */
  letter-spacing: 3rpx; /* 增加字间距更优雅 */
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif; /* 优化字体 */
  line-height: 1;
}