/* 页面全局容器 */
.container { 
  background-color: #f5f7fa; 
  min-height: 100vh; 
  padding: 24rpx 20rpx;
  box-sizing: border-box;
}

/* 搜索区域样式 */
.search-section {
  position: relative;
  margin-bottom: 30rpx;
}
.search-input { 
  background: #ffffff; 
  padding: 24rpx 24rpx 24rpx 70rpx; 
  border-radius: 50rpx; 
  margin-bottom: 0;
  border: none;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  width: 100%;
}
.search-left-icon {
  position: absolute;
  left: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}
.search-clear-icon {
  position: absolute;
  right: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  padding: 10rpx;
}

/* 滚动列表区域 */
.poi-scroll-view {
  height: calc(100vh - 140rpx); /* 自适应剩余高度 */
}
.poi-list {
  width: 100%;
}

/* 单个景点卡片 */
.poi-item {
  display: flex;
  background: #ffffff;
  margin-bottom: 24rpx;
  padding: 28rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease-in-out;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}
/* 卡片悬浮效果 */
.poi-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 景点图片 */
.poi-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  flex-shrink: 0; /* 防止被挤压 */
  background-color: #f0f2f5; /* 图片未加载时的占位色 */
}

/* 景点信息区域 */
.poi-info {
  margin-left: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1; /* 占满剩余宽度 */
  padding: 8rpx 0;
}
.poi-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}
.poi-name { 
  font-size: 32rpx; 
  font-weight: 600; 
  color: #1a1a1a;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.poi-tag { 
  font-size: 22rpx; 
  color: #d93025; 
  background: #fff8f8; 
  padding: 4rpx 12rpx; 
  border-radius: 8rpx;
  flex-shrink: 0;
}
.poi-address { 
  font-size: 26rpx; 
  color: #666;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.poi-desc-short { 
  font-size: 24rpx; 
  color: #999;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 最多显示2行，超出省略 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 空数据提示 */
.empty-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #ccc;
}
.empty-text {
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #999;
}

/* 底部安全区 */
.bottom-safe-area {
  height: 60rpx;
  width: 100%;
}