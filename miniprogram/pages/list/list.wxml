<view class="container">
  <view class="search-bar">
    <input placeholder="搜索南锣景点..." class="search-input" />
  </view>
  
  <scroll-view scroll-y="true" class="poi-list">
    <view class="poi-item" wx:for="{{pois}}" wx:key="_id" bindtap="goToDetail" data-id="{{item._id}}">
      <image class="poi-img" src="{{item.img}}" mode="aspectFill"></image>
      <view class="poi-content">
        <text class="poi-name">{{item.name}}</text>
        <text class="poi-address">{{item.address}}</text>
        <text class="poi-type">{{item.type}}</text>
      </view>
    </view>
  </scroll-view>
</view>