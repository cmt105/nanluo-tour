/* 页面容器 */
.detail-container {
  background-color: #f9f9f9;
  min-height: 100vh;
}

/* 顶部轮播图 */
.banner-wrap {
  position: relative;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}
.banner-img {
  width: 100%;
  height: auto;
}
/* 轮播指示器 */
.banner-dots {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 10rpx;
  z-index: 10;
}
.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ffffff80;
  transition: all 0.3s ease;
}
.dot.active {
  background: #ffffff;
  width: 30rpx;
  border-radius: 6rpx;
}
/* 顶部温馨提示 */
.banner-tips {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: rgba(0,0,0,0.5);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  z-index: 10;
}
.banner-tips text {
  font-size: 24rpx;
  color: #fff;
}

/* 主体卡片 */
.main-card {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 20rpx rgba(0,0,0,0.05);
}

/* 景点名称+评分 */
.poi-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.poi-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
}
.score-wrap {
  text-align: right;
}
.poi-score {
  font-size: 32rpx;
  color: #ff9800;
  display: block;
}
.score-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 信息行（开放时间/地址） */
.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
/* 图标容器美化 */
.info-icon-wrap {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}
.time-icon {
  background: #fff0f0;
}
.addr-icon {
  background: #e6f0ff;
}
.info-icon {
  font-size: 32rpx;
}
.info-text {
  flex: 1;
  font-size: 30rpx;
  color: #666;
  line-height: 1.4;
}
.info-tips {
  font-size: 22rpx;
  color: #ff9800;
  margin-left: 10rpx;
}
/* 小型地图按钮 */
.map-btn-small {
  background: #e6f0ff;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}
.map-arrow {
  font-size: 24rpx;
  color: #1677ff;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  margin: 30rpx 0;
}
.tab-item {
  flex: 1;
  text-align: center;
  position: relative;
}
.tab-item text {
  font-size: 32rpx;
  color: #999;
  transition: all 0.3s ease;
}
.tab-item.active text {
  color: #1677ff;
  font-weight: 600;
}
/* 标签下划线 */
.tab-underline {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: transparent;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}
.tab-underline.active {
  background: #1677ff;
  width: 60rpx;
}

/* 内容区域 */
.content-area {
  padding-top: 10rpx;
}
.content-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
}
.content-text {
  font-size: 30rpx;
  color: #444;
  line-height: 1.8;
}
/* 游玩贴士列表 */
.tips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.tips-item {
  display: flex;
  align-items: flex-start;
}
.tips-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  margin-top: 4rpx;
}
.tips-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #ffffff;
  border-top: 1rpx solid #eeeeee;
  padding: 16rpx 24rpx;
  gap: 12rpx;
}
/* 收藏按钮 */
.fav-btn {
  flex: 1;
  background: #f5f5f5;
  color: #333;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 16rpx 0;
  transition: all 0.3s ease;
}
.fav-btn.active {
  background: #fff0f0;
  color: #e53935;
}
/* 分享按钮 */
.share-btn {
  width: 140rpx;
  background: #e6f4ea;
  color: #00b42a;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 16rpx 0;
}
/* 地图按钮 */
.map-btn {
  width: 140rpx;
  background: #e6f0ff;
  color: #1677ff;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 16rpx 0;
}