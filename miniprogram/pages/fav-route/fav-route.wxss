.fav-route-container {
  background: #f8f8f8;
  min-height: 100vh;
  padding: 20rpx;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}
.empty-icon {
  font-size: 120rpx;
  color: #ccc;
  margin-bottom: 30rpx;
}
.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.back-btn {
  background: #A00000;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

/* 路线列表样式 */
.route-list {
  gap: 20rpx;
}
.route-item {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}
.route-header {
  margin-bottom: 20rpx;
}
.route-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
}
.route-intro {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}
.route-op {
  align-self: flex-end;
}
.cancel-btn {
  font-size: 26rpx;
  color: #ff4444;
  padding: 8rpx 16rpx;
  border: 1rpx solid #ff4444;
  border-radius: 4rpx;
}